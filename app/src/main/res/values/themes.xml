<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FastMediaSorter" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">@color/tab_background</item>
        <!-- Disable window background to avoid splash screen delay -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Disable splash screen on Android 12+ -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">0</item>
    </style>
    
    <style name="Theme.FastMediaSorter.Fullscreen" parent="Theme.FastMediaSorter">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabTextColor">@color/tab_text_unselected</item>
        <item name="tabBackground">@color/tab_background</item>
    </style>
</resources>