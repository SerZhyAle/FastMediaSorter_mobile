<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fileInfoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Video player -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fileInfoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:show_buffering="never"
        app:use_controller="true"
        app:auto_show="false"
        app:show_timeout="3000" />

    <!-- Video loading indicator -->
    <LinearLayout
        android:id="@+id/videoLoadingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0000000"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#FFFFFF" />

        <TextView
            android:id="@+id/videoLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Loading video..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Video control zone (bottom 1/3) - invisible guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/videoControlGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <!-- Left touch area (only top 2/3) -->
    <View
        android:id="@+id/previousArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/videoControlGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nextArea" />

    <!-- Right touch area (only top 2/3) -->
    <View
        android:id="@+id/nextArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/videoControlGuideline"
        app:layout_constraintStart_toEndOf="@id/previousArea"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Video control touch area (bottom 1/3) -->
    <View
        android:id="@+id/videoControlArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00000000"
        app:layout_constraintTop_toBottomOf="@id/videoControlGuideline"
        app:layout_constraintBottom_toTopOf="@id/fileInfoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Connection name -->
    <TextView
        android:id="@+id/connectionNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#80000000"
        android:padding="4dp"
        android:text="Connection name"
        android:textColor="#AAAAAA"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@id/fileInfoText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- File info caption -->
    <TextView
        android:id="@+id/fileInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E0000000"
        android:padding="4dp"
        android:text="filename.jpg  1234 KB  2025-01-15 14:30"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:gravity="start"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/controlsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Copy progress overlay -->
    <LinearLayout
        android:id="@+id/copyProgressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0000000"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:indeterminateTint="#FFFFFF" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Copying..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0000000"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/noDestinationsWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ No destinations configured. Only delete available.\nGo to Settings → Sort to.. to add destinations."
            android:textColor="#FFCA28"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/copyToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy to.."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_gravity="start" />

        <!-- First row: 0-4 -->
        <LinearLayout
            android:id="@+id/buttonsRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/sortButton0"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton1"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton2"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton3"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton4"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Second row: 5-9 -->
        <LinearLayout
            android:id="@+id/buttonsRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/sortButton5"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton6"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton7"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton8"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sortButton9"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Move to section -->
        <TextView
            android:id="@+id/moveToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move to.."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="start" />

        <!-- First row: 0-4 -->
        <LinearLayout
            android:id="@+id/moveButtonsRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/moveButton0"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton1"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton2"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton3"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton4"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Second row: 5-9 -->
        <LinearLayout
            android:id="@+id/moveButtonsRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/moveButton5"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton6"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton7"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton8"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/moveButton9"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Delete and Rename buttons in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Delete button -->
            <Button
                android:id="@+id/deleteButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Delete"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <!-- Rename button -->
            <Button
                android:id="@+id/renameButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Rename"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Back button (top left corner) -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Refresh button (top center) -->
    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_rotate"
        android:contentDescription="Refresh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Image counter -->
    <TextView
        android:id="@+id/imageCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="1 / 100"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
