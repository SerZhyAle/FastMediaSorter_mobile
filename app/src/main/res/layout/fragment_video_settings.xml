<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/video_playback_settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/videoEnabledCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_video_playback"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/max_video_file_size"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/maxVideoSizeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="100"
        android:enabled="false"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valid_range_mb"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/supported_formats"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/video_streaming_note"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/showVideoErrorDetailsCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_detailed_video_errors"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detailed_errors_description"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/playVideoTillEndCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_video_till_end"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_video_till_end_description"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

</LinearLayout>
